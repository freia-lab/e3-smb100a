record (ao, "$(P):$(DEV)-Freq:cSetV") {
   field (DESC, "Frequency")
   field (EGU, "MHz")
   field (LINR, LINEAR)
   field (ASLO, "1e-6")
   field (DTYP, "stream")
   field (LOPR, "0.1")
   field (HOPR, "12.75e3")
   field (PREC, "9")
   field (OUT, "@smb100a.proto set_freq $(PORT)")
}

record (ao, "$(P):$(DEV)-Pwr:cSetV") {
   field (DESC, "Output power")
   field (EGU, "dBm")
   field (DTYP, "stream")
   field (LOPR, "-30")
   field (HOPR, "27.0")
   field (PREC, "2")
   field (OUT, "@smb100a.proto set_out_pwr $(PORT)")
