record (bo, "$(P):$(DEV):cmdRem") {
   field (DESC, "Set Remote operation")
   field (DTYP, "stream")
   field (OUT, "@smb100a.proto goto_remote $(PORT)")
   field (UDFS, "NO_ALARM")
}

record (bo, "$(P):$(DEV):cmdLocal") {
   field (DESC, "Set Local operation")
   field (DTYP, "stream")
   field (OUT, "@smb100a.proto goto_local $(PORT)")
   field (UDFS, "NO_ALARM")
}
record (bo, "$(P):$(DEV):cmdLocLockOut") {
   field (DESC, "Disable Local button")
   field (DTYP, "stream")
   field (OUT, "@smb100a.proto local_lockout $(PORT)")
   field (UDFS, "NO_ALARM")
}
